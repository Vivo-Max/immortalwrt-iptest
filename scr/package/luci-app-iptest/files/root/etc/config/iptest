config settings 'settings'
	option path '/etc/iptest/ip.txt'
	option outfile '/tmp/result.csv'
	option max '100'
	option tls '1'
	option speedtest '0'
	option speedlimit '5'
	option url 'speed.cloudflare.com/__down?bytes=500000000'

config background 'background'
	option bg_type 'none'
	option bg_url ''
	option bg_blur '10'
	option bg_opacity '0.8'

config cron 'cron'
	option enable_cron '0'
	option cron_expr '0 2 * * *'
